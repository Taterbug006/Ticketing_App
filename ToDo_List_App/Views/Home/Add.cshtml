@model ToDo_List_App.Models.Ticket

@{
    ViewData["Title"] = "Add Ticket";
}

<h2>Add New Ticket</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SprintNumber"></label>
        <input asp-for="SprintNumber" class="form-control" />
        <span asp-validation-for="SprintNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PointValue"></label>
        <input asp-for="PointValue" class="form-control" />
        <span asp-validation-for="PointValue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StatusId">Status</label>
        <select asp-for="StatusId" class="form-control" asp-items="ViewBag.Statuses"></select>
        <span asp-validation-for="StatusId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
